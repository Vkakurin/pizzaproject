<html>

<body>
<a href="/main">Go to Main page</a>
<h4>PIZZA</h4>

<div>
    <form method="post"  >
        <input type="text" name="pizzaName" placeholder="Enter the name of the pizza" >
        <input type="text" name="size" placeholder="Enter size of the pizza">
        <input type="text" name="description" placeholder="Enter description of the pizza">
        <input type="text" name="price" placeholder="Enter price the pizza">
        <input type="" name="cafeId" placeholder="Enter cafeId">
        <button type="submit">Add Pizza</button>
    </form>
</div>

<form method="get"  action="/pizza">
    <input type="text" name="filter" value="{{filter}}" placeholder="pizzaName"/>
    <button type="submit">Find pizza by name</button>
</form>



<form method="get" action="/deletePizza" >
    <input type="" name="id"  placeholder="Enter Id" >
    <button type="submit">Delete pizza by Id</button>
</form>

<h3><div>List of pizza</div></h3>
<h4><div>PizzaId <> PizzaName <> Size <> Description <> Price <> CafeId <>  NameCafe</div></h4>
{{#pizzas}}
    <div>
        <b>{{id}}</b>
        <strong>{{pizzaName}}</strong><  >
        <span>{{size}}</span><  >
        <span>{{description}}</span><  >
        <span>{{price}}</span><  >
        <strong>{{getCafeId}}</strong><  >
        <strong>{{getNameCafe}}</strong>
    </div>

{{/pizzas}}
<h3><div>List of cafe</div></h3>
<h4><div>CafeId <> NameCafe <> AddressCafe <> PhoneCafe</div></h4>

{{#cafes}}
    <div>
        <b>{{cafeId}}</b><  >
        <strong>{{nameCafe}}</strong><  >
        <span>{{address}}</span><  >
        <strong>{{phone}}</strong><  >
    </div>

{{/cafes}}


</body>

</html>
